<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Gestion Immobiliere</display-name>

    <!-- LISTENERS - L'ordre est important -->
    <!-- Le DatabaseManager doit s'initialiser avant le nettoyeur de sessions -->

    <!-- Listener pour initialiser l'application et la base de données -->
    <listener>
        <listener-class>sn.isi.gestion_immobiliere.Listener.ApplicationContextListener</listener-class>
    </listener>

    <!-- Listener pour nettoyer les sessions (déjà existant) -->
    <listener>
        <listener-class>sn.isi.gestion_immobiliere.Listener.SessionCleanupListener</listener-class>
    </listener>

    <!-- Configuration des servlets existants -->
    <servlet>
        <servlet-name>immeubleServlet</servlet-name>
        <servlet-class>sn.isi.gestion_immobiliere.Servlet.ImmeubleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UniteLocationServlet</servlet-name>
        <servlet-class>sn.isi.gestion_immobiliere.Servlet.UniteLocationServlet</servlet-class>
    </servlet>



    <!-- Page d'accueil -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuration des sessions optimisée -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Mettre true en production avec HTTPS -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Filtres de sécurité - RÉACTIVÉS après optimisation -->
    <filter>
        <filter-name>SecurityHeadersFilter</filter-name>
        <filter-class>sn.isi.gestion_immobiliere.Filter.SecurityHeadersFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityHeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filtre de sécurité principal - À réactiver après test -->
    <!--
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>sn.isi.gestion_immobiliere.Filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>sn.isi.gestion_immobiliere.Servlet.ImageServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Pages d'erreur personnalisées -->
    <error-page>
        <error-code>403</error-code>
        <location>/unauthorized.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>